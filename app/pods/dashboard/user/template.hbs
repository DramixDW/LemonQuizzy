<div class="w-full ">
  <div class=" flex justify-around text-white  bg-green">
    <h3 class="my-2 py-2">
      utilisateurs dashboard
    </h3>
    {{#link-to "user.add"}}
      <button class="text-white border border-white p-3">
        Cr√©er
      </button>
    {{/link-to}}
  </div>
  <form class="flex justify-around bg-green text-white py-2">
    <label for="search" class="font-bold py-2">Rechercher</label>
    {{input placeholder="nom de forum" key-up=(action "updateList") value=search
            class=" shadow appearance-none border rounded  py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline"}}
  </form>
  <div>
    {{#each list as |user|}}
      <div class="flex justify-around border border-green border-t-0 p-4">
        <h3 class="wrapped p-2 text-dark w-3/5">
          {{user.email}}
        </h3>
        {{#link-to "user.edit" user }}
          <button class="bg-green p-2 text-white border border-white">
            Edit
          </button>
        {{/link-to}}
        {{#link-to "dashboard.user"}}
          <button {{action "removeUser" user.id}}class="bg-green p-2 text-white border border-white">
            Delete
          </button>
        {{/link-to}}
      </div>
    {{/each}}
  </div>
</div>