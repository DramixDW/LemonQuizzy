<div>
  <h3 class="text-center text-white  bg-green p-4">
    Nouvelle question
  </h3>
  <div>
    <form action="editCat"  class="form" method="post">
      <select onchange={{action "setSelection" value="target.value"}}>
        <option disabled > -- Forum -- </option>
        {{#each forum as |forum|}}
          <option value={{forum.id}} selected={{eq forum.id model.forum.id}}> {{forum.title}} </option>
        {{/each}}
      </select>
      {{!-- Part of the form common to all question type --}}
      <label for="title">Titre</label>
      {{input  required=true placeholder="Title" value=(mut model.title) class=" shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline"}}
      <label for="description" >Description</label>
      {{textarea row="10"  required=true placeholder="it's about code and hookers" value=(mut model.description) class=" shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline"}}
      <button {{action "editCat" }}  class="formBtn">
        Cr√©er
	     </button>
    </form>
    <div class="text-red">{{errorMessage}}</div>
  </div>
</div>