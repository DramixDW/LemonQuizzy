<p class="pt-4 font-bold">
  Nom :
</p>
<div class="">
  {{#each this.model.currentpoolquestions as |poolQuestion index|}}
    {{#if (eq poolQuestion.question.questiontype.name "normal")}}
      <Normal  @question={{poolQuestion.question}} id="question-{{index}}"  @indexQ={{index}} class="max-w-800 trans-smooth my-8 overflow-hidden"/>
    {{/if}}
    {{#if (eq poolQuestion.question.questiontype.name "qcm")}}
      <Qcm  @question={{poolQuestion.question}} id="question-{{index}}" @indexQ={{index}} class="max-w-800 trans-smooth my-8 overflow-hidden"/>
    {{/if}}
    {{#if (eq poolQuestion.question.questiontype.name "text_has_gaps")}}
      <Hole  @question={{poolQuestion.question}} @QPool={{poolQuestion}} id="question-{{index}}" @indexQ={{index}} class="max-w-800 trans-smooth my-8 overflow-hidden" />
    {{/if}}
    {{#if (eq poolQuestion.question.questiontype.name "math")}}
      <Math @question={{poolQuestion.question}} @QPool={{poolQuestion}}  id="question-{{index}}" @indexQ={{index}} class="max-w-800 trans-smooth my-8 overflow-hidden"/>
    {{/if}}
  {{/each}}
</div>
