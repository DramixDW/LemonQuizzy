<div>
  <h3 class="text-center text-white  bg-green p-4">
    {{this.model.title}} 
  </h3>
</div>
<div class="flex">
  {{#each this.model.currentpoolquestions as |poolQuestion index|}}
    {{#if (eq poolQuestion.question.questiontype.name "normal")}}
      <Normal  @question={{poolQuestion.question}} id="question-{{index}}"  @indexQ={{index}} class="{{unless (eq index 0) "w-0 h-0"}} trans-smooth my-8 overflow-hidden"/>
    {{/if}}
    {{#if (eq poolQuestion.question.questiontype.name "qcm")}}
      <Qcm  @question={{poolQuestion.question}} id="question-{{index}}" @indexQ={{index}} class="{{unless (eq index 0) "w-0 h-0"}} trans-smooth my-8 overflow-hidden"/>
    {{/if}}
    {{#if (eq poolQuestion.question.questiontype.name "text_has_gaps")}}
      <Hole  @question={{poolQuestion.question}} @QPool={{poolQuestion}} id="question-{{index}}" @indexQ={{index}} class="{{unless (eq index 0) "w-0 h-0"}} trans-smooth my-8 overflow-hidden" />
    {{/if}}
    {{#if (eq poolQuestion.question.questiontype.name "math")}}
      <Math @question={{poolQuestion.question}} @QPool={{poolQuestion}}  id="question-{{index}}" @indexQ={{index}} class="{{unless (eq index 0) "w-0 h-0"}} trans-smooth my-8 overflow-hidden"/>
    {{/if}}
  {{/each}}
</div>

<div class="border-t w-4/5 ml-1/10 flex justify-around py-8">
  <button  {{action "goLeft" }} class="text-5xl text-blue">
    &lt;
  </button>
  <p id="pageCount" class="text-3xl py-2">
    1/{{this.model.currentpoolquestions.length}}
  </p>
  <button {{action "goRight" }} class="text-5xl text-blue">
    >
  </button>
</div>
<div class="w-screen flex justify-center">
  <button onclick={{action "validate"}} class="bg-green p-4 text-white hover:bg-greenDarker font-bold">
    Valider
  </button>
</div>
