<div class="bg-green text-white w-full flex justify-around py-2">
  <h2>
    Messagerie
  </h2>
  <button class="border border-greenDarker text-white py-2">
    DÃ©marrer une conversation
  </button>
</div>
{{#each this.model as |conversation|}}
  <div class="border border-t-0 border-green p-2">
    {{#if (eq conversation.sender.id session.data.authenticated.tokenData.sub)}}
      {{#link-to "message.user" conversation.receiver.id class="flex justify-around content-center text-black"}}
        <div class=" text-center w-1/3">
          <img src="http://localhost:8001/static/{{conversation.receiver.avatar.filename}}"
               alt="{{conversation.receiver.username}} profile picture" class="rounded-full w-100 h-100">
        </div>
        <div class="flex flex-col justify-around w-2/3">
          <h3>
            {{conversation.receiver.username}}
          </h3>
          <p>
            {{conversation.content}}
          </p>
        </div>
      {{/link-to}}
    {{else}}
      {{#link-to "message.user" conversation.sender.id class="flex justify-around content-center text-black"}}
        <div class="w-1/3 text-center">
          <img src="http://localhost:8001/static/{{conversation.sender.avatar.filename}}"
               alt="{{conversation.sender.username}} profile picture" class="rounded-full w-100 h-100">
        </div>
        <div class="flex flex-col justify-around w-2/3">
          <h3>
            {{conversation.sender.username}}
          </h3>
          <p>
            {{conversation.content}}
          </p>
        </div>
      {{/link-to}}
    {{/if}}
  </div>
{{/each}}