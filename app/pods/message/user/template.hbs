<div class="h-full flex flex-col">
  <div class="w-full bg-green text-white py-2 flex justify-around">
    <h2>
      Conversation avec {{user.username}}
    </h2>
  </div>
  <div class="flex flex-col justify-end flex-grow min-h-0">
    <div class="overflow-scroll" id="box">
      {{#each this.model as |message|}}
        <div class="flex   ">
          <div class="w-full py-2 flex justify-start {{if (not-eq user.id message.sender.id) "flex-row-reverse"}}">
            <img src="http://localhost:8001/static/{{message.sender.avatar.filename}}" alt="{{message.sender.username}} profile picture"  class="rounded-full w-16 h-16 {{if (not-eq user.id message.sender.id) "mr-1/20" "ml-1/20"}}">
            <p class="inline-block p-4 border rounded mx-2">
              {{message.content}}
            </p>
          </div>
        </div>
      {{/each}}
    </div>  
  </div>
  <form class="bg-green w-full p-2">
    {{textarea rows="4" value=content class="m-0"}}
  </form>
  <div class="flex justify-around bg-green pb-2 ">
    <button  class="bg-greenDarker p-2 text-white">
      {{#link-to "message"}} Conversations {{/link-to}}
    </button>
    <button {{action "sendMessage"}} class="bg-greenDarker p-2 text-white">
      Envoyer
    </button>
  </div>
</div>